// Algoritmo para verificar a idade
programa 
{
  funcao inicio() 
  {
    // Declaração da variável para armazenar a idade do usuário
    inteiro idade

    // Solicita a idade ao usuário
    escreva("Digite sua idade: ")
    leia(idade)

    // Verifica se é maior ou menor de idade e exibe a mensagem correspondente
    se (idade >= 18) 
    {
    escreva("Maior de idade")

    }
    senao
    {
    escreva("Menor de idade")

    }
  }
}
// Fim do algoritmo
